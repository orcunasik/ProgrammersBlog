@model UserLoginDto
@{
    ViewBag.Title = "Kullanıcı Girişi";
    Layout = "_UserLoginLayout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><i class="fas fa-house-user"></i> Giriş Yap</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Email">Eposta Adresi</label>
                            <input class="form-control" asp-for="Email" type="email" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Password">Parola</label>
                            <input class="form-control" asp-for="Password" type="password" placeholder="Parola" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                            <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-secondary text-white" href="#"><i class="fas fa-user-lock"></i> Şifremi Unuttum?</a>
                            <button class="btn btn-primary" type="submit"><i class="fas fa-sign-in-alt"></i> Oturum Aç</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <a class="btn btn-success btn-block text-white" href="#"><i class="fas fa-user-edit"></i> Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>