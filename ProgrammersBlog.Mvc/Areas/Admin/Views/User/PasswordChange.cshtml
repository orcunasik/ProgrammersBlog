@model UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Şifre Değiştir";
}
<div class="row">
    <div class="col-lg-10 offset-lg-1">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><i class="fas fa-key"></i>Şifre Değiştir</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="PasswordChange" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword">Mevcut Şifre</label>
                        <input type="password" class="form-control" asp-for="CurrentPassword"
                               placeholder="Lütfen Mevcut Şifrenizi Giriniz" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword">Yeni Şifre</label>
                        <input type="password" class="form-control" asp-for="NewPassword"
                               placeholder="Lütfen Yeni Şifrenizi Giriniz" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div> 
                    <div class="form-group">
                        <label asp-for="RepeatPassword">Yeni Şifre Tekrarı</label>
                        <input type="password" class="form-control" asp-for="RepeatPassword"
                               placeholder="Lütfen Yeni Şifrenizi Tekrar Giriniz" />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save"></i> Kaydet</button>
                        <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fas fa-times"></i> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>