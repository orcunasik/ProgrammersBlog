@model UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Düzenle";
}
<div class="row">
    <div class="col-lg-10 offset-lg-1">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><i class="fas fa-edit"></i>Profil Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="ChangeDetails" id="form-user-update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserName">Kullanıcı Adı</label>
                        <input class="form-control" asp-for="UserName"
                               placeholder="Lütfen Kullanıcı Adı Giriniz" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Eposta Adresi</label>
                        <input type="email" class="form-control" asp-for="Email"
                               placeholder="Lütfen Eposta Adresinizi Giriniz" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber"
                               placeholder="Lütfen Telefon Numaranızı Giriniz" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture">Profil Resmi</label>
                        <input type="hidden" asp-for="Picture" />
                        <img src="~/img/@Model.Picture" class="img-fluid img-thumbnail my-image" alt="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile">Resim Ekle</label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save"></i> Kaydet</button>
                        <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fas fa-times"></i> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>