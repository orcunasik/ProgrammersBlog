@model UserUpdateDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-edit"></span>Kullanıcı Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="form-user-update">
                    <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true"                            style="display:none;">

                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserName">Kullanıcı Adı</label>
                        <input class="form-control" asp-for="UserName" 
                        placeholder="Lütfen Kullanıcı Adı Giriniz" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Eposta Adresi</label>
                        <input type="email" class="form-control" asp-for="Email" 
                        placeholder="Lütfen Eposta Adresinizi Giriniz" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber"
                        placeholder="Lütfen Telefon Numaranızı Giriniz"/>
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture">Profil Resmi</label>
                        <input type="hidden" asp-for="Picture" />
                        <img src="~/img/@Model.Picture" class="img-fluid img-thumbnail my-image" alt="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile">Resim Ekle</label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span>İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span>Kaydet</button>
            </div>
        </div>
    </div>
</div>